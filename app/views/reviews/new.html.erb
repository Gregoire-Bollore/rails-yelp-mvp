<h1>New review</h1>

<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: (0..5), prompt: "Choose the rating" %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>


<%= link_to 'Back', restaurant_path(@restaurant) %>
